<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.reborn.reborn.ui.view.assessment.rehab.SpotViewModel" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/primary"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/assessment_purpose_rehab"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rehab_page_2"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textSize="22dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:text="@string/assessment_spot1_title"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/t1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="목"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/t2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="어깨"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/t3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="가슴"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/t4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="복부"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/t5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="위팔"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/t6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="팔꿈치"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/t7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="아래팔"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/t8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="손목"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/t9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="등"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/t10"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="허리"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/t11"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="엉덩이"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/t12"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="윗다리"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/t13"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="무릎"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/t14"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="아랫\n다리"
                android:fontFamily="@font/inter_bold"
                android:textSize="20dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/t15"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="발목"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/t16"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="test"
                android:fontFamily="@font/inter_bold"
                android:textSize="22dp"
                android:textColor="@color/second_primary"
                android:gravity="center"
                android:background="@drawable/back_stroke_radius_5dp"
                android:elevation="4dp"
                android:visibility="invisible"
                android:layout_margin="7dp"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:elevation="4dp"
            android:text="@string/prev"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:gravity="center"
            android:onClick="@{() -> vm.prev()}"
            android:background="@drawable/primary_radius_10dp"/>

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/primary"
            android:gravity="center"
            android:elevation="4dp"
            android:text="@string/routine_stop"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="22dp"
            android:onClick="@{() -> vm.stop()}"/>

    </LinearLayout>



</layout>