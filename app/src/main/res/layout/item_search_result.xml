<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.reborn.reborn.data.common.model.MainSearch" />

        <variable
            name="vm"
            type="com.reborn.reborn.ui.view.main.MainViewModel" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.type.equals(`exercise`) ? item.title : @string/result_search(item.title,item.token)}"
            android:onClick="@{() -> vm.selectItem(item)}"
            android:padding="5dp"
            android:textSize="18dp"
            android:textColor="@color/grey_bbb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>